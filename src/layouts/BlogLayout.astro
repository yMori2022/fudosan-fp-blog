---
const { title, description, pubDate } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <article>
      <header>
        <h1>{title}</h1>
        <time>{pubDate?.toLocaleDateString()}</time>
      </header>
      <main>
        <slot />
      </main>
    </article>
  </body>
</html>
